      body {
      font-family: 'roboto', sans-serif;
      }
      .header-container{
      background-color: #062F4F; /*ink*/
      background: linear-gradient(#062F4F 80%, black);
      border-bottom: solid 1px black;
      }
      header {
      max-width: 950px;
      margin: 0 auto;
      color: white;
      }
      h1 {
      margin: 0;
      padding: .3em 0 .1em .5em;
      }
      h1 a {
      color: white;
      text-decoration: none;
      text-transform: uppercase;
      text-shadow: 2px 2px 2px #000;
      letter-spacing: 5px;
      font-size: .7em;
      }
      nav ul {
      list-style: none;
      padding: 0 0 0 .9em;
      margin: 0;
      }
